{
  "name": "cody-ai-personal",
  "displayName": "Cody AI",
  "description": "AI-powered coding companion with context-aware chat, code generation, bug fixes, and project intelligence. Transform your VS Code experience.",
  "version": "1.0.2",
  "publisher": "cody-dev",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "AI",
    "Machine Learning",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "ai",
    "assistant",
    "chatgpt",
    "openai",
    "code generation",
    "coding assistant",
    "copilot alternative",
    "bug fix",
    "test generation",
    "refactoring",
    "explanation",
    "context-aware",
    "vector database"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "bugs": {
    "url": "https://github.com/DishankChauhan/Cody/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DishankChauhan/Cody.git"
  },
  "homepage": "https://github.com/DishankChauhan/Cody#readme",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Cody AI Assistant",
      "properties": {
        "cody.backendUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "URL of the Cody backend server"
        },
        "cody.maxRetries": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum number of retries for API requests"
        },
        "cody.requestTimeout": {
          "type": "number",
          "default": 30000,
          "minimum": 5000,
          "maximum": 120000,
          "description": "Request timeout in milliseconds"
        },
        "cody.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for troubleshooting"
        }
      }
    },
    "commands": [
      {
        "command": "cody.generateCode",
        "title": "Cody: Generate Code"
      },
      {
        "command": "cody.explainCode",
        "title": "Cody: Explain This Code"
      },
      {
        "command": "cody.generateTests",
        "title": "Cody: Generate Unit Tests"
      },
      {
        "command": "cody.fixBug",
        "title": "Cody: Fix This Bug"
      },
      {
        "command": "cody.clearChat",
        "title": "Clear Chat",
        "icon": "$(clear-all)"
      },
      {
        "command": "cody.reindexProject",
        "title": "Cody: Re-index Project"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cody-sidebar",
          "title": "Cody AI",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "cody-sidebar": [
        {
          "type": "webview",
          "id": "codyChat",
          "name": "Chat",
          "icon": "$(comment-discussion)",
          "contextualTitle": "Cody Chat"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "cody.generateCode",
          "group": "navigation"
        },
        {
          "when": "editorHasSelection",
          "command": "cody.explainCode",
          "group": "navigation"
        },
        {
          "when": "editorHasSelection",
          "command": "cody.generateTests",
          "group": "navigation"
        },
        {
          "when": "editorHasSelection",
          "command": "cody.fixBug",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "cody.clearChat",
          "when": "view == codyChat",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/runTest.js",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "@types/diff": "^5.0.3",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "typescript": "^5.1.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@vscode/test-electron": "^2.3.8"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "markdown-it": "^14.1.0",
    "chokidar": "^3.5.3",
    "diff": "^5.1.0"
  }
}
 