{
  "name": "cody-personal-assistant",
  "displayName": "Cody - Personal Assistant",
  "description": "Your personal code assistant, right in VS Code.",
  "version": "0.0.1",
  "publisher": "cody-dev",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:cody.generateCode"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cody.generateCode",
        "title": "Cody: Generate Code"
      },
      {
        "command": "cody.explainCode",
        "title": "Cody: Explain This Code"
      },
      {
        "command": "cody.generateTests",
        "title": "Cody: Generate Unit Tests"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "cody.generateCode",
          "group": "navigation"
        },
        {
          "when": "editorHasSelection",
          "command": "cody.explainCode",
          "group": "navigation"
        },
        {
          "when": "editorHasSelection",
          "command": "cody.generateTests",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "markdown-it": "^14.1.0"
  }
}
